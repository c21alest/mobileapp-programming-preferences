<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/input_text_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ändra text här:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Valfri text"
        app:layout_constraintLeft_toLeftOf="@id/input_text_dec"
        app:layout_constraintRight_toRightOf="@id/input_text_dec"
        app:layout_constraintTop_toBottomOf="@id/input_text_dec" />

    <Button
        android:id="@+id/set_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skicka"
        app:layout_constraintTop_toBottomOf="@id/input_text"
        app:layout_constraintLeft_toLeftOf="@id/input_text" />

</androidx.constraintlayout.widget.ConstraintLayout>